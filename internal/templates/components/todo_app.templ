package components

import "bytethebug/internal/models"

templ TodoApp(data []models.Todo) {
    <h2>Todo App1</h2>
    <form hx-post="/create" hx-target="#list">
        <input type="text" name="todo" id="todo" placeholder="Add a todo" required />
        <button type="submit">Add</button>
    </form>
    <div id="list">
        @TodoList(data)
    </div>
}